<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0F2E29"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="546dp"
        tools:context=".mapaOcorrencias" />

    <TextView
        android:id="@+id/textLngLAt"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <TextView
        android:id="@+id/textDistancia"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="100dp" />

    <Button
        android:id="@+id/BotaoApagar"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map"
        android:layout_marginBottom="-53dp"
        android:background="@drawable/custom_button"
        android:text="@string/apagarmarcadores"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonAcidentes"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map"
        android:layout_marginStart="98dp"
        android:layout_marginBottom="-50dp"
        android:layout_toEndOf="@+id/BotaoApagar"
        android:background="@drawable/custom_button"
        android:text="@string/FiltrarAci"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button3"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map"
        android:layout_marginBottom="-108dp"
        android:background="@drawable/custom_button"
        android:text="@string/Mostrartudo"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonFiltrar1km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonAcidentes"
        android:layout_alignBottom="@+id/map"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="-110dp"
        android:background="@drawable/custom_button"
        android:text="@string/MostrarMarcadoresProximos"
        android:textColor="#FFFFFF" />


</RelativeLayout>
